</head>

<body>

    <div class="container-fluid">
        <div class="content-wrapper">
            <dv class="row">


                <div class="col-md-4">
                    <div class="card">
                        <div class="service-image-left">
                            <center>
                                <img id="item-display" src="~/Images/Doctor-male.jpg" alt="" style="width:100%; height:200px;">
                                
                                <div class="row">
                                    <br /><br />
                                    <h4> Rate This Doctor :</h4>
                                    <div class="col-lg-3"></div>
                                    <div class="col-lg-8">
                                        <fieldset class="rating">
                                            <input type="radio" id="star5" class="ratings" name="rating" value="5" /><label class="full" for="star5" title="Awesome - 5 stars"></label>
                                            <input type="radio" id="star4half" class="ratings" name="rating" value="4.5" /><label class="half" for="star4half" title="Pretty good - 4.5 stars"></label>
                                            <input type="radio" id="star4" class="ratings" name="rating" value="4" /><label class="full" for="star4" title="Pretty good - 4 stars"></label>
                                            <input type="radio" id="star3half" class="ratings" name="rating" value="3.5" /><label class="half" for="star3half" title="Meh - 3.5 stars"></label>
                                            <input type="radio" id="star3" class="ratings" name="rating" value="3" /><label class="full" for="star3" title="Meh - 3 stars"></label>
                                            <input type="radio" id="star2half" class="ratings" name="rating" value="2.5" /><label class="half" for="star2half" title="Kinda bad - 2.5 stars"></label>
                                            <input type="radio" id="star2" class="ratings" name="rating" value="2" /><label class="full" for="star2" title="Kinda bad - 2 stars"></label>
                                            <input type="radio" id="star1half" class="ratings" name="rating" value="1.5" /><label class="half" for="star1half" title="Meh - 1.5 stars"></label>
                                            <input type="radio" id="star1" class="ratings" name="rating" value="1" /><label class="full" for="star1" title="Sucks big time - 1 star"></label>
                                            <input type="radio" id="starhalf" class="ratings" name="rating" value="0.5" /><label class="half" for="starhalf" title="Sucks big time - 0.5 stars"></label>
                                        </fieldset>
                                    </div>

                                </div>
                                <br>
                            </center>
                            <center>
                                
                                <br />
                                <div class="product-rating">
                                    @for (int i = 0; i < Model.Doctor.Total_Rate; i++)
                                    {
                                        <i class="fa fa-star gold" style="color:gold;"></i>
                                    }
                                </div>
                                <br />
                            </center>
                          
                            <br />
                        </div>
                    </div>
                </div>
            </dv>
        </div>
    </div>

</body>
</html>

@section Scripts{
    @Scripts.Render("~/bundles/jquery")
