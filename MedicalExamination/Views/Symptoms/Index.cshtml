@model IEnumerable<MedicalExamination.ViewModels.DiseasesAndSymptoms.SymptomsViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Symptom.NameAr)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Symptom.NameEn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Symptom.CreationDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoryNameAr)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Symptom.NameAr)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Symptom.NameEn)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Symptom.CreationDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryNameAr)
        </td>
        <td >
            @Html.ActionLink("Edit", "Edit", new { id = item.Symptom.Id }, new { @class = "btn btn-success" }) |
            @Html.ActionLink("Details", "Details", new { id = item.Symptom.Id },new { @class= "btn btn-info" }) |
            @using (Html.BeginForm("Delete", "Symptoms", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@item.Symptom.Id" />

                <button type="submit" class="btn btn-danger" onclick="javascript:return ShowMessage();">Remove</button>
            }
        </td>
    </tr>
}

</table>


<script>
    function ShowMessage() {
        var result = confirm("Do you want to delete this symptom ?");
        if (result) {
            return true;
        } else {
            return false;
        }
    }
</script>
